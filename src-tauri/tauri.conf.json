{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "qpetz",
  "version": "0.1.0",
  "identifier": "com.qpetz.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "qpetz",
        "url": "/ModelViewer",
        "width": 400,
        "height": 400,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "shadow": false
      },
      {
        "label": "ModelConfiguration_window",
        "title": "模型参数配置",
        "width": 1200,
        "height": 800,
        "url": "/model-config",
        "resizable": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default", "model-config-capability"]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
